<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.GLITest" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->
        <!-- <item name="colorPrimary">@color/my_light_primary</item> -->
    </style>

    <style name="Theme.GLITest" parent="Base.Theme.GLITest" />

    <style name="title_text">
        <item name="android:textSize">24sp</item>
        <item name="android:textColor">@color/primary_light</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="subtitle_text">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/primary_light</item>
    </style>

    <style name="desc_text">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/primary_light</item>
    </style>

    <style name="text_input"
        parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="android:layout_margin">8dp</item>
    </style>
    <style name="button">
        <item name="android:layout_margin">8dp</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:backgroundTint">@color/primary_light</item>
    </style>
</resources>